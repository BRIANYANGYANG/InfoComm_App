<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meetingbg2"
    >
    <Button
        android:id="@+id/btn_back"
        android:background="@drawable/back_selector"
        android:layout_marginTop="24px"
        android:layout_marginLeft="40px"
        android:layout_width="32px"
        android:layout_height="32px" />

    <ImageView
        android:background="@drawable/logo"
        android:layout_marginRight="20px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_width="96px"
        android:layout_height="30px" />

    <RelativeLayout
        android:layout_marginTop="290px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button1"
            android:background="@drawable/allmeetings_selector"
            android:layout_width="240px"
            android:layout_height="80px"
             />

        <Button
            android:id="@+id/button2"
            android:layout_width="240px"
            android:layout_height="80px"
            android:background="@drawable/gfhyyc_selector"
            android:layout_marginLeft="250px"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="240px"
            android:layout_height="80px"
            android:background="@drawable/asiayth_selector"
            android:layout_marginLeft="500px"
            />

        <Button
            android:id="@+id/button4"
            android:background="@drawable/kjlt_selector"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginLeft="750px"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_below="@+id/button1"
            android:background="@drawable/zhcsselector"
             />
        <Button
            android:id="@+id/button6"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="250px"
            android:layout_below="@+id/button1"
            android:background="@drawable/jyhy_selector"
             />

        <Button
            android:id="@+id/button7"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="500px"
            android:layout_below="@+id/button1"
            android:background="@drawable/kms_selector"
            />
        <Button
            android:id="@+id/button8"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="750px"
            android:layout_below="@+id/button1"
            android:background="@drawable/chengdu_selector"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/meeting_img"
        android:scaleType="fitStart"
        android:layout_marginTop="510px"
        android:layout_marginLeft="40px"
        android:layout_width="990px"
        android:layout_height="1300px" />

</RelativeLayout>